<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="basicStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="players">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="player">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="playerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/playerTextSize</item>
        <item name="android:textColor">@color/playerTextColor</item>
        <item name="android:background"></item>
    </style>

    <style name="imageBoard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/Players</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="buttonArea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/dartsBoard</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="buttonsRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/buttonMarginRight</item>
        <item name="android:layout_marginLeft">@dimen/buttonMarginLeft</item>
        <item name="android:layout_marginTop">@dimen/buttonMarginTop</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/playerTextColor</item>
        <item name="android:background">@color/buttonColor</item>
    </style>
</resources>
