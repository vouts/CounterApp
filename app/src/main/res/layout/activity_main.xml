<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout style="@style/basicStyle">

        <LinearLayout
            android:id="@+id/Players"
            style="@style/players">

            <LinearLayout
                android:id="@+id/titles"
                style="@style/titles">

                <TextView
                    android:id="@+id/playersTitle"
                    style="@style/playerStyle"
                    android:text="@string/playersTitle" />

                <TextView
                    android:id="@+id/ScoreTitle"
                    style="@style/playerStyle"
                    android:text="@string/playersScore" />

                <TextView
                    android:id="@+id/ShotsTitle"
                    style="@style/playerStyle"
                    android:text="@string/playersShots" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/playerA"
                style="@style/player">

                <TextView
                    android:id="@+id/namePlayerA"
                    style="@style/playerStyle"
                    android:text="@string/namePlayerA" />

                <TextView
                    android:id="@+id/scorePlayerA"
                    style="@style/playerStyle"
                    android:text="@string/scorePlayerA" />

                <TextView
                    android:id="@+id/shotsPlayerA"
                    style="@style/playerStyle"
                    android:text="@string/shotsPlayerA" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/playerB"
                style="@style/player">

                <TextView
                    android:id="@+id/namePlayerB"
                    style="@style/playerStyle"
                    android:text="@string/namePlayerB" />

                <TextView
                    android:id="@+id/scorePlayerB"
                    style="@style/playerStyle"
                    android:text="@string/scorePlayerB" />

                <TextView
                    android:id="@+id/shotsPlayerB"
                    style="@style/playerStyle"
                    android:text="@string/shotsPlayerB" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/dartsBoard"
            style="@style/imageBoard"
            android:src="@drawable/dartboard" />

        <LinearLayout
            android:id="@+id/buttonArea"
            style="@style/buttonArea">

            <LinearLayout
                android:id="@+id/specialButtons"
                style="@style/buttonsRow">

                <Button
                    android:id="@+id/reset"
                    style="@style/buttons"
                    android:onClick="reset"
                    android:text="@string/reset" />

                <Button
                    android:id="@+id/plusOne"
                    style="@style/buttons"
                    android:onClick="setPlusOne"
                    android:text="@string/plusOne" />

                <Button
                    android:id="@+id/plusTwo"
                    style="@style/buttons"
                    android:onClick="setPlusTwo"
                    android:text="@string/plusTwo" />

                <Button
                    android:id="@+id/plusThree"
                    style="@style/buttons"
                    android:onClick="setPlusThree"
                    android:text="@string/plusThree" />

                <Button
                    android:id="@+id/soClose"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/soClose" />

                <Button
                    android:id="@+id/bullsEye"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/bullsEye" />

                <Button
                    android:id="@+id/zero"
                    style="@style/buttons"
                    android:onClick="zero"
                    android:text="@string/zero" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsRow1"
                style="@style/buttonsRow">

                <Button
                    android:id="@+id/one"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/one" />

                <Button
                    android:id="@+id/two"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/two" />

                <Button
                    android:id="@+id/three"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/three" />

                <Button
                    android:id="@+id/four"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/four" />

                <Button
                    android:id="@+id/five"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/five" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsRow2"
                style="@style/buttonsRow">

                <Button
                    android:id="@+id/six"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/six" />

                <Button
                    android:id="@+id/seven"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/seven" />

                <Button
                    android:id="@+id/eight"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/eight" />

                <Button
                    android:id="@+id/nine"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/nine" />

                <Button
                    android:id="@+id/ten"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/ten" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsRow3"
                style="@style/buttonsRow">

                <Button
                    android:id="@+id/eleven"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/eleven" />

                <Button
                    android:id="@+id/twelve"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/twelve" />

                <Button
                    android:id="@+id/thirteen"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/thirteen" />

                <Button
                    android:id="@+id/fourteen"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/fourteen" />

                <Button
                    android:id="@+id/fifteen"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/fifteen" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsRow4"
                style="@style/buttonsRow">

                <Button
                    android:id="@+id/sixteen"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/sixteen" />

                <Button
                    android:id="@+id/seventeen"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/seventeen" />

                <Button
                    android:id="@+id/eighteen"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/eighteen" />

                <Button
                    android:id="@+id/nineteen"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/nineteen" />

                <Button
                    android:id="@+id/twenty"
                    style="@style/buttons"
                    android:onClick="getNumberFromText"
                    android:text="@string/twenty" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/buttonsRow5"
                style="@style/buttonsRow">


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
